<?xml version="1.0" encoding="windows-1252"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!--Mingo configuration-->

    <bean id="mingoContextFactory" class="com.mingo.config.MingoTemplateFactory"/>

    <bean id="mingoTemplate" class="com.mingo.MingoTemplate" depends-on="mongo" factory-bean="mingoContextFactory" factory-method="createMingoTemplate">
        <constructor-arg value="/mingo/mingo-context.xml"/>
        <constructor-arg ref="mongo"/>
    </bean>

</beans>